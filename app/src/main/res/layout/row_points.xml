<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="1dp"
    android:id="@+id/card_view_points"
    android:background="@color/fondo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"


    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:src="@drawable/dent"
            android:id="@+id/imageViewPoints"
            android:layout_weight="1"

            android:maxWidth="64dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:minHeight="64dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:text="Aliquid magnam in magnam impedit reprehenderit quod non."
            android:gravity="left"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"


            android:id="@+id/txtDescribePoints"
            android:layout_weight="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="300"
            android:id="@+id/txtPointsPoints"
            android:layout_weight="1" />
    </LinearLayout>
</android.support.v7.widget.CardView>