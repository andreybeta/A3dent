<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fefefefe"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.acarolabs.a3dent.Login">

    <ImageView
        android:src="@drawable/smoothice"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView
        android:src="@drawable/dent"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:id="@+id/imageView" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/usuicos"
            android:hint="party.garbage"
            android:textColor="#fefefefe"
            android:textColorHint="#fefefefe"
            android:ems="20"
            android:inputType="text"
            android:background="#19263238"
            android:id="@+id/editText"

            />

        <EditText
            android:hint="Password"
            android:textColorHint="#CFCFCF"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="25dp"
            android:drawableLeft="@drawable/icos"
            android:background="#19263238"
            android:inputType="textPassword"
            android:id="@+id/editText2"
            />

    <ImageButton
        android:src="@drawable/logiblack"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:elevation="50dp"
        android:background="@drawable/ripple"
        android:scaleType="fitXY"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="2dp"
        android:onClick="onclick"
        android:layout_height="60dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="link"
            android:id="@+id/textView"
            android:autoLink="web" />
        <EditText
            android:hint="Sign In wiht Facebook"
            android:textColorHint="#fefefefe"
            android:textAlignment="center"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#19263238"
            android:layout_marginBottom="1dp"
            android:drawableRight="@drawable/right_arrow"
        />
        <EditText
            android:hint="New to Dent.co? Sign Up now!"
            android:textColorHint="#CFCFCF"
            android:autoLink="web"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/right_arrow"
            android:background="#19263238"
            android:layout_marginBottom="0dp"

         />
   </LinearLayout>

</RelativeLayout>
