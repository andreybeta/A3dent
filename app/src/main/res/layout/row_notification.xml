<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/card_view_notification"
    android:layout_margin="8dp"
    android:layout_gravity="left"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/notificationuno"
            android:id="@+id/ImgNotification"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_width="100dp"
            android:layout_height="150dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RADIOGRAFÍAS PANORAMICAS"
            android:id="@+id/lblTitleNotification"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ImgNotification"
            android:layout_toEndOf="@+id/ImgNotification" />
        <TextView
            android:id="@+id/lblDescriptionNotification"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hazte tu radiografía panorámica desde $16.000 pesos, manejamos la mejor tecnología y calidad odontológica."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTitleNotification"
            android:layout_alignLeft="@+id/lblTitleNotification"
            android:layout_alignStart="@+id/lblTitleNotification" />


    </RelativeLayout>




</android.support.v7.widget.CardView>

