<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="com.acarolabs.a3dent.Activities.ContactActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/dent"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center_vertical|center_horizontal"        android:textColor="#ffff"
        />

        <Button
            android:drawableLeft="@drawable/web"
            android:text="www.3dent.com"
            android:paddingLeft="10dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"        android:textColor="#ffff"
            android:elevation="10dp"
            android:background="#95000000"
            android:layout_width="250dp"
            android:layout_height="43dp" />

        <Button
            android:drawableLeft="@drawable/at"
            android:text="@string/at"
            android:paddingLeft="10dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"        android:textColor="#ffff"
            android:elevation="10dp"
            android:background="#95000000"
            android:layout_width="250dp"

            android:layout_height="43dp" />

        <Button
            android:drawableLeft="@drawable/phone"
            android:text="www.3dent.com"
            android:paddingLeft="10dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|center_horizontal"        android:textColor="#ffff"
            android:elevation="10dp"
            android:background="#95000000"
            android:layout_width="250dp"
            android:layout_height="43dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"        android:textColor="#ffff"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:drawableLeft="@drawable/facebook"
            android:background="@drawable/ripple"
            android:paddingLeft="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <Button
            android:drawableLeft="@drawable/twitter"
            android:background="@drawable/ripple"
            android:paddingLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />


     </LinearLayout>
</LinearLayout>
</RelativeLayout>
