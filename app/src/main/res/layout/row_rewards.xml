<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="10dp"
    android:id="@+id/card_view_rewards"
    android:layout_width="300dp"
    android:layout_height="320dp"
    android:layout_gravity="center_horizontal"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imagedefect"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txtRewardsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="Aliquid magnam in magnam impedit reprehenderit quod non."
        android:layout_gravity="bottom"
        android:background="#8c000000"
        android:textColor="#ffe3e3e3"
        android:textSize="20sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="8762"
            android:id="@+id/txtRewardsPoints"
            android:textStyle="bold"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>